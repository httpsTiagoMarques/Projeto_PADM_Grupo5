<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout do cabeçalho do menu de navegação lateral (Navigation Drawer).
    Exibe as informações do utilizador logado (imagem, nome e email)
    e inclui um botão para efetuar logout da conta.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/salmon"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="24dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="center_horizontal">

    <!-- Imagem do utilizador -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/nav_header_desc"
        android:src="@mipmap/ic_launcher_round"
        android:padding="8dp" />

    <!-- Nome -->
    <TextView
        android:id="@+id/main_lbl_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/nav_header_title"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white" />

    <!-- Email -->
    <TextView
        android:id="@+id/main_lbl_userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/nav_header_subtitle"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <!-- Linha separadora -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@android:color/white" />

    <!-- Botão de Logout (ícone + texto centrados) -->
    <LinearLayout
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:elevation="3dp"
        android:translationZ="1dp">

        <!-- Ícone de logout -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_logout"
            android:layout_marginEnd="8dp" />

        <!-- Texto do botão de logout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log-out"
            android:textStyle="bold"
            android:textColor="@color/salmon"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
