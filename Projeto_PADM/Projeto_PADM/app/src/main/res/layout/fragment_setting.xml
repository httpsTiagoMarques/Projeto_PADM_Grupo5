<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingFragment"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Imagem -->
    <ImageView
        android:id="@+id/settings_imageView"
        android:layout_width="103dp"
        android:layout_height="94dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- Botão Upload -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_Upload"
        android:layout_width="94dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:text="Upload"
        android:textColor="@color/salmon"
        app:backgroundTint="@color/white"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_imageView"
        app:strokeColor="@color/salmon"
        app:strokeWidth="2dp" />

    <!-- Label Nome -->
    <TextView
        android:id="@+id/settings_lbl_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Nome:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_Upload" />

    <!-- Campo Nome -->
    <EditText
        android:id="@+id/settings_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_edittext_background"
        android:inputType="textPersonName"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_lbl_nome" />

    <!-- Label Idade -->
    <TextView
        android:id="@+id/settings_lbl_idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Idade:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_nome" />

    <!-- Campo Idade -->
    <EditText
        android:id="@+id/settings_idade"
        android:layout_width="153dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/login_edittext_background"
        android:inputType="number"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_lbl_idade" />

    <!-- Label Sexo -->

    <!-- Campo Sexo -->

    <!-- Label Peso -->
    <TextView
        android:id="@+id/settings_lbl_sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:text="Sexo:"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/settings_lbl_idade"
        app:layout_constraintTop_toBottomOf="@+id/settings_nome" />

    <Spinner
        android:id="@+id/settings_sexo"
        android:layout_width="152dp"
        android:layout_height="42dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/login_edittext_background"
        android:entries="@array/sexo_opcoes"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/settings_idade"
        app:layout_constraintTop_toBottomOf="@+id/settings_lbl_sexo" />

    <TextView
        android:id="@+id/settings_lbl_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Peso:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_idade" />

    <!-- Campo Peso -->
    <EditText
        android:id="@+id/settings_peso"
        android:layout_width="152dp"
        android:layout_height="47dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/login_edittext_background"
        android:inputType="numberDecimal"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_lbl_peso" />

    <!-- Label Altura -->

    <!-- Campo Altura -->

    <!-- Label Email -->

    <TextView
        android:id="@+id/settings_lbl_altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:text="Altura:"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/settings_lbl_peso"
        app:layout_constraintTop_toBottomOf="@+id/settings_sexo" />

    <EditText
        android:id="@+id/settings_altura"
        android:layout_width="149dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_edittext_background"
        android:inputType="numberDecimal"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toEndOf="@+id/settings_peso"
        app:layout_constraintTop_toBottomOf="@+id/settings_lbl_altura" />

    <TextView
        android:id="@+id/settings_lbl_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Email:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_peso" />

    <!-- Campo Email -->
    <EditText
        android:id="@+id/settings_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_edittext_background"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_lbl_email" />

    <!-- Label Password -->
    <TextView
        android:id="@+id/settings_lbl_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Password:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_email" />

    <!-- Campo Password -->
    <EditText
        android:id="@+id/settings_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_edittext_background"
        android:inputType="textPassword"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_lbl_password" />

    <!-- Botão Guardar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_btnSave"
        android:layout_width="187dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="Guardar"
        android:textColor="@color/white"
        app:backgroundTint="@color/salmon"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_password" />

</androidx.constraintlayout.widget.ConstraintLayout>